<label for="id_title" class="label-wrapper">
  <span class="label-text">Title</span>
  <select name="title" id="id_title" onchange={{action "selectTitle" value="target.value"}}>
    {{#each titles as |t|}}
      <option value="{{t}}">{{t}}</option>
    {{/each}}
  </select>
</label>
{{validation-error error=errors.title}}

<label for="id_first_name" class="label-wrapper">
  <span class="label-text">First name</span>
  {{input type="text" name="first_name" id="id_first_name" value=firstName required="required" class="input-value" maxlength="17" placeholder="First name"}}
</label>
{{validation-error error=errors.firstName}}

<label for="id_last_name" class="label-wrapper">
  <span class="label-text">Last name</span>
  {{input type="text" required="required" name="last_name" id="id_last_name" value=lastName class="input-value" maxlength="20" placeholder="Last name"}}
</label>
{{validation-error error=errors.lastName}}

<label for="id_telephone_number" class="label-wrapper">
  <span class="label-text">Telephone number</span>
  {{input type="text" pattern="tel" name="telephone_number" id="id_telephone_number" required="required" value=telNumber class="input-value" maxlength="20" placeholder="Telephone number"}}
</label>
{{validation-error error=errors.tel}}